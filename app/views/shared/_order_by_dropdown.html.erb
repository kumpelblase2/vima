<div class="dropdown">
    <div class="dropdown-trigger">
        <button class="button" aria-haspopup="true" aria-controls="order-menu">
            <span>Ordering</span>
            <span class="icon is-small">
                <i class="fa fa-angle-down" aria-hidden="true"></i>
            </span>
        </button>
    </div>
    <div class="dropdown-menu" id="order-menu" role="menu">
        <div class="dropdown-content">
            <%= video_ordering_dropdown_item 'Name', 'name' %>
            <%= video_ordering_dropdown_item 'Added', 'created_at' %>
            <%= video_ordering_dropdown_item 'Updated', 'updated_at' %>
            <hr class="dropdown-divider">
            <% MetadataHelper.get_ordering_metadata.each do |name| %>
                <%= video_ordering_dropdown_item name, name %>
            <% end %>
        </div>
    </div>
</div>
