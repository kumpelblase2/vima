<!DOCTYPE html>
<html>
  <head>
    <title>Vima</title>
    <%= csrf_meta_tags %>
    <%= favicon_link_tag 'favicon.ico' %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
  </head>

  <body>
    <%= javascript_include_tag 'application' %>
    <div id="page">
      <%= render 'shared/heading' %>
      <div class="container is-fluid">
        <%= yield %>
      </div>
      <%= render 'shared/footer' %>
    </div>
    <script>
      new Vue({
        el: "#page"
      });
    </script>
  </body>
</html>
